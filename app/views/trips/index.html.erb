<div class="trip-container">
  <h2>Your Trips:</h2>
  <div class="trip-card-container">
    <% @trips.each do |trip| %>
    <div class="trip-card-link">
      <%= link_to trip_boards_path(trip) do %>
      <div class = "trip-card">
        <div class="trip-card-content">
          <% unless trip.photo.nil? %>
            <div class="trip-photo"><%= cl_image_tag trip.photo, height: 170, width: 160, crop: :fill %></div>
          <% end %>
          <p><%= trip.name %> to <%=trip.destination %></p>
          <div class="trip-action-list">
            <p><%= link_to "Edit", edit_trip_path(trip), class: "trip-btn" %></p>
            <p><%= link_to "Delete", trip_path(trip),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this Trip?" }, class: "trip-btn"%></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <br> </br>
  <%= link_to "Add trip", new_trip_path, class: "trip-btn" %>
</div>
