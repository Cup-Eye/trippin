<div class="trip-container">
  <% @trips.each do |trip| %>
  <div class = "trip-card">
    <p><%= trip.name %> to <%=trip.destination %></p>
    <%= link_to "View", trip_boards_path(trip) %>
    <%= link_to "Edit trip", edit_trip_path(trip) %>
    <%= link_to "Delete trip", trip_path(trip),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this Trip?" }%>
  </div>
  <% end %>
  <h2> </h2>
  <%= link_to "Add trip", new_trip_path %>
</div>
