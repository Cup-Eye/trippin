<p><%= link_to "Back", trip_boards_path(@board) %></p>
<div class="container">
  <div class="row">
    <div class="col-12 col-sm-9">
      <div class="row">
        <% @transportations.each do |transport| %>
        <div class="col-12">
        <div class="transport-container" class="justify-content-around">
          <h1> Transportation for <%=transport.user.first_name%> </h1>
          <div>
            <p>Route Number<strong><%=transport.route_number %></strong></p>
            <p> Booking Number <strong><%=transport.booking_number%></strong></p></li>
          </div>
          <div class="d-flex justify-content-between align-items-center text-align-center">
            <div>
              <p>Departure<br><strong><%=transport.departure_location%></strong></p>
              <p><strong><%=(transport.departure_time).strftime("%A, %d %b %Y %l:%M %p")%></strong></p>
            </div>
            <div>
               <p><i class="fas fa-plane fa-2x"></i></p>
            </div>
            <div>
              <p>Arrival<br><strong><%=transport.arrival_location%></strong></p>
              <p><br><strong><%=(transport.arrival_time).strftime("%A, %d %b %Y %l:%M %p")%></strong></p>
            </div>
          </div>
          <%= link_to "Edit", edit_transportation_path(transport) %>
          <%= link_to "Delete", transportation_path(transport),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this Transportation?" }%>
          </div>
        </div>
        <% end %>
        <h2></h2>
        <%= link_to "Add Transportation", new_transportation_board_transportation_path(@board) %>
      </div>
    </div>
    <div class="col-12 col-sm-3" id="chat">
    </div>
  </div>


</div>



