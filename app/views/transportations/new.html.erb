<div class="form-container">
  <p><%= link_to "Back", transportation_board_transportations_path(@board), class: "trip-btn" %></p>

  <%= simple_form_for([@board, @transportation])  do |f| %>
  <h1> Add Transportation: </h1>
    <div class="form-group-inline">
      <div class="form-group">
        <%= f.label :route_number %>
        <%= f.text_field :route_number, class: 'form-control', placeholder: "e.g. FRI3N0" %>
      </div>

      <div class="form-group">
        <%= f.label :booking_number %>
        <%= f.text_field :booking_number, class: 'form-control', placeholder: "e.g. F4R5I2N6D" %>
      </div>
    </div>

    <div class="form-group-inline">
      <div class="form-group">
        <%= f.label :departure_time%>
        <%= f.text_field :departure_time, class: 'form-control', placeholder: "e.g. 14-09-2019 18:00"%>
      </div>

      <div class="form-group">
        <%= f.label :arrival_time%>
        <%= f.text_field :arrival_time, class: 'form-control', placeholder: "e.g. 18-09-2019 15:00"%>
      </div>
    </div>

    <div class="form-group-inline">
      <div class="form-group">
        <%= f.label :departure_location%>
        <%= f.text_field :departure_location, class: 'form-control', placeholder: "e.g. JFK New York"%>
      </div>

      <div class="form-group">
        <%= f.label :arrival_location%>
        <%= f.text_field :arrival_location, class: 'form-control', placeholder: "e.g. CDG Paris"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.input :kind, label: "Type of transportation", collection: ["Car", "Plane", "Bus", "Train"], class: 'form-control' %>
    </div>

    <%= f.button :submit, class: "trip-btn"%>
  <% end %>
</div>
