<h1> Add Transportation: </h1>
<%= form_for([@board, @transportation])  do |f| %>
  <div class="form-group">
    <%= f.label :route_number %>
    <%= f.text_field :route_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :booking_number %>
    <%= f.text_field :booking_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :departure_time%>
    <%= f.text_field :departure_time, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :arrival_time%>
    <%= f.text_field :arrival_time, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :departure_location%>
    <%= f.text_field :departure_location, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :arrival_location%>
    <%= f.text_field :arrival_location, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :kind %>
    <%= f.text_field :kind, class: 'form-control' %>
  </div>

  <%= f.button :submit %>
<% end %>
