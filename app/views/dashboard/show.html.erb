<div class="trip-container-large">
  <div class="trip-banner">
    <h1> <strong>Welcome To Your <span>Trips</span>, <em><%=current_user.first_name%></em></strong> </h1>
  </div>

<div class="trip-container">
  <div class="trip-card-container">
    <div class="trip-card-link">
      <%= link_to new_trip_path do %>
        <div class = "trip-card-add">
          <div class = "trip-card-content">
            <div class="trip-photo-add"><p><i class="fas fa-plus" id="plus"></i></p></div>
            <h4>Add Trip</h4>
          </div>
        </div>
      <% end %>
    </div>
    <% @participants.each do |participant| %>
    <div class="trip-card-link">
            <li class="nav-item dropdown dropdown-settings-li">
              <i class="icon-card fas fa-cog"></i>
            <div id="dropdown-settings" class="dropdown-menu dropdown-menu-right">
              <%= link_to "Delete", trip_path(participant.trip),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this Trip?" }%>
            </div>
            </li>
      <%= link_to trip_path(participant.trip) do %>
      <div class = "trip-card">
        <div class="trip-card-content">
          <% unless participant.trip.photo.blank? %>
            <div style="background-size: cover; background-image: url(<%= cl_image_path participant.trip.photo %>)" class="trip-photo"></div>
          <% end %>
          <h4><%= participant.trip.name %><%=participant.trip.destination %></h4>

        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
</div>
