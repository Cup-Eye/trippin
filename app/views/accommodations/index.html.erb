<div class="accom-container-large">
  <div class="row">
    <div class="col-12 col-lg-3">
      <div class="side-button" id="B">
        <%= link_to "All Trips", dashboard_path, id: "Bl"%>
      </div>

      <div class= "side-button" id="A">
        <i class="fas fa-home fa-2x"></i>
        <%= link_to "Add Accommodation", new_accommodation_board_accommodation_path(@board), id: "Al"%>
      </div>

      <div class= "side-button" id="D">
        <i class="fas fa-globe-americas fa-2x"></i>
        <%= link_to "Destintion", destination_board_destinations_path(@trip.destination_board), id: "Dl"%>
      </div>

      <div class="side-button" id="TF">
        <i class="far fa-calendar-alt fa-2x"></i>
        <%= link_to "Time Frames", timeframe_board_timeframes_path(@trip.timeframe_board), id: "TFl"%>
      </div>

      <div class="side-button" id="T">
        <i class="fas fa-plane fa-2x"></i>
        <%= link_to "Transportation", transportation_board_transportations_path(@trip.transportation_board), id: "Tl"%>
      </div>
    </div>

    <div class="col-12 col-lg-6">
      <div class="accom-container">
        <h2>Accommodation</h2>
        <% @accommodations.each do |acc| %>
          <div class="accom-card-link">
            <%= link_to ("#{acc.url}"), target: :_blank do %>
              <div class="accom-card">
                <div class="accom-card-content">
                  <div class="accom-header">
                    <h3><strong><%=acc.name%></strong></h3>
                    <p> suggested by <strong><%=acc.user.first_name%></strong></p>
                  </div>
                  <p><%=acc.address%></p>
                  <div class="accom-header">
                    <p>Accommodation Type: <%=acc.kind%></p>
                    <p class="accom-price"><strong><%=acc.price%>$</strong>/day</p>
                  </div>
                </div>
                <div class="accom-action-list">
                  <%= link_to "Edit", edit_accommodation_path(acc), class: "accom-btn" %>
                  <%= link_to "Delete", accommodation_path(acc),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete this Accommodation?" }, class: "accom-btn"%>
                </div>
              </div>
            <%end%>
          </div>
        <%end%>
      </div>
    </div>

    <div class="col-12 col-lg-3">
      <div class="comment-container">
        <div class="comment-list">
          <% @board.comments.each do |comment| %>
            <div class="message-container">
              <p class="sender"><%= comment.user.first_name %> </p>
              <div class="message"><%= comment.content %></div>
            </div>
          <%end%>
        </div>
        <div class="comment-form">
          <%= simple_form_for ([@board, @comment]) do |f| %>
            <%= f.input :content %>
            <%= f.submit "Send", class: "send-btn"%>
          <%end%>
        </div>
      </div>
  </div>
</div>

