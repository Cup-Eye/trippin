<div class="destination-container-large">
  <div class="row">
    <div class="col-12 col-lg-2">
      <div class="side-menu">

        <div class=side-link>
          <%= link_to (trip_path(@trip)) do %>
            <div class="side-button" id="B">
              <div id="Bl">Back to Boards </div>
            </div>
          <%end%>
        </div>

        <div class="side-link">
          <%= link_to (timeframe_board_timeframes_path(@trip.timeframe_board)) do %>
            <div class="side-button" id="TF">
              <i class="far fa-calendar-alt fa-2x"></i>
              <div id="Tfl">Time Frames</div>
            </div>
          <%end%>
        </div>

        <div class="side-link">
          <%= link_to (destination_board_destinations_path(@trip.destination_board)) do %>
            <div class= "side-button" id="active">
              <i class="fas fa-globe-americas fa-2x"></i>
              <div id="Active">Destination</div>
            </div>
          <%end%>
        </div>

        <div class="side-link">
          <%= link_to (transportation_board_transportations_path(@trip.transportation_board)) do %>
            <div class="side-button" id="T">
              <i class="fas fa-plane fa-2x"></i>
              <div id="Tl">Transportation</div>
            </div>
          <%end%>
        </div>

        <div class="side-link">
          <%= link_to (accommodation_board_accommodations_path(@trip.accommodation_board)) do %>
            <div class= "side-button" id="A">
              <i class="fas fa-home fa-2x"></i>
              <div id="Al">Accommodation</div>
            </div>
          <%end%>
        </div>


      </div>
    </div>
    <div class="col-12 col-lg-7">
      <div class="destination-container">
        <div class="head">
          <h2>Destination</h2>
          <%= link_to "+ Add Destination", new_destination_board_destination_path(@board), class: "add"%>
        </div>
        <% @destinations.each do |dest| %>
          <div class="destination-card <%= 'voted' if current_user.liked? dest %>" >
            <div class="" class="justify-content-around">
              <h1><%= dest.name %><b> Number of votes</b></h1>
            </div>
            <p><%= dest.description %></p>
            <p><%= link_to 'Vote', destination_destination_votes_path(dest), method: :post %></p>
            <p><%= link_to 'Unvote', destination_destination_votes_path(dest), method: :delete %></p>
            <p>Votes: <%= dest.votes_for.size %></p>
            <p>Voted by:</p>
            <ul>
              <% dest.find_votes_for.each do |vote| %>
                <li>
                  <%= vote.voter.email %>
                </li>
              <% end %>
            </ul>
            <div class="destination-buttons">
              <%= link_to "Delete", destination_path(dest), class: "dest-btn",
                method: :delete,
                data: { confirm: "Are you sure you want to delete this Destination?" }%>
              <%= link_to "Edit", edit_destination_path(dest), class: "dest-btn" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-lg-3">
      <div class="comment-container">
        <div class="comment-list">
          <% @board.comments.each do |comment| %>
            <div class="message-container">
              <p class="sender"><%=comment.user.first_name%> <%=comment.user.photo%></p>
              <div class="message"><%= comment.content %></div>
            </div>
          <%end%>
        </div>
        <div class="comment-form">
          <%= simple_form_for ([@board, @comment]), html: { autocomplete: 'off' } do |f| %>
            <%= f.input :content, label: false  %>
            <%= f.submit "Send", class: "send-btn"%>
          <%end%>
        </div>
      </div>
  </div>
</div>
