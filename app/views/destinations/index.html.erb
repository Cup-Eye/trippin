<div class="destination-container-large">
  <div class="row">
    <div class="col-12 col-lg-3">
      <div class="side-button" id="B">
        <%= link_to "All Trips", dashboard_path, id: "Bl"%>
      </div>

      <div class= "side-button" id="D">
        <i class="fas fa-globe-americas fa-2x"></i>
        <%= link_to "Add Destintion", new_destination_board_destination_path(@board), id: "Dl"%>
      </div>

      <div class= "side-button" id="A">
        <i class="fas fa-home fa-2x"></i>
        <%= link_to "Accommodation", accommodation_board_accommodations_path(@trip.accommodation_board), id: "Al"%>
      </div>

      <div class="side-button" id="TF">
        <i class="far fa-calendar-alt fa-2x"></i>
        <%= link_to "Time Frames", timeframe_board_timeframes_path(@trip.timeframe_board), id: "TFl"%>
      </div>

      <div class="side-button" id="T">
        <i class="fas fa-plane fa-2x"></i>
        <%= link_to "Transportation", transportation_board_transportations_path(@trip.transportation_board), id: "Tl"%>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="destination-container">
        <h2>Destination</h2>
        <div class="destination-card">
          <h2><%= link_to "+ Add new Destination", new_destination_board_destination_path(@board), class: "trip-btn"%></h2>
        </div>
        <% @destinations.each do |dest| %>
          <div class="destination-card" >
            <div class="" class="justify-content-around">
              <h1><%= dest.name %><b> Number of votes</b></h1>
            </div>
            <p><%= dest.description %></p>
            <p>***Placeholder for user icons & vote button***</p>
            <div class="destination-buttons">
              <%= link_to "Delete", destination_path(dest), class: "dest-btn",
                method: :delete,
                data: { confirm: "Are you sure you want to delete this Destination?" }%>
              <%= link_to "Edit", edit_destination_path(dest), class: "dest-btn" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
