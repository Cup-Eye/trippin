<% @destinations.each do |dest| %>
  <h1><%= dest.name %></h1>
  <p><%= dest.description %></p>
  <%= link_to "Edit", edit_destination_path(dest), class: "trip-btn" %>
  <%= link_to "Delete", destination_path(dest), class: "trip-btn",
        method: :delete,
        data: { confirm: "Are you sure you want to delete this Destination?" }%>
<% end %>
