<div class="form-container">
  <p><%= link_to "Back", destination_board_destinations_path(@destination.board), class: "trip-btn"%></p>
  <%= simple_form_for([@board, @destination])  do |f| %>
  <h1> Edit Destination: </h1>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <%= f.button :submit, "Edit Destination", class: "trip-btn" %>
  <% end %>
</div>
