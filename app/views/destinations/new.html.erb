<div class="form-container">
  <p><%= link_to "Back", destination_board_destinations_path(@board), class: "trip-btn"%></p>
  <%= simple_form_for([@board, @destination])  do |f| %>
  <h1> Add Destination: </h1>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

    <%= f.button :submit, "Add destination", class: "trip-btn"%>
  <% end %>
</div>
