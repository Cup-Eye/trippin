<div class="d-flex justify-content-center">

  <div class="col-12 col-lg-3">
    <br>
      <p><%= link_to "Back", trip_path(@trip), class: "trip-btn" %></p>
    <div >
      <%= simple_form_for([@trip, @participant])  do |f| %>
        <h1 class=ptc-h1> Add Your Friends by entering their Email: </h1>

        <div class="form-group d-flex form-participant">
          <%= f.input :email, placeholder: "Enter email", label: false%>
          <%= f.submit "Add", class: "ptc-btn-submit"%>
        </div>
        <%= link_to trip_path(@trip), class: "fbtn" do%>
          <div class= "finish-btn">Finish</div>
        <% end %>
      <% end %>
    </div>
</div>
  <div class="col-12 col-lg-4">
    <div class="participant-list">
      <p><u>Added Participants:</u></p>
        <% @trip.participants.each do |participant| %>
        <div class="participants">
              <div>
              <%= cl_image_tag participant.user.photo,
                   gravity: :face, class: "avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <%= participant.user.first_name %> <%=participant.user.last_name%>
              </div>
              <%= link_to "ğŸ—‘", trip_participant_path(@trip, participant),
                  method: :delete,
                  data: { confirm: "Are you sure you want to remove this Participant?" }%>
             </div>
        <% end %>
    </div>
  </div>
</div>
